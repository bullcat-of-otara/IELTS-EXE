---
const logs = [
    "LOADED: 5W1H DATABASE",
    "BOOTING: TASK 2 EDITOR",
    "SYSTEM: READY TO LEARN...",
    "PATCH: V1.2 INSTALLED",
    "CONNECTED: IELTS.EXE",
];
---

<div
    class="border-4 border-slate-700 bg-black p-4 shadow-[8px_8px_0_rgba(0,0,0,0.5)] h-full flex flex-col relative overflow-hidden"
>
    <!-- Scanline effect -->
    <div
        class="absolute inset-0 bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] z-10 pointer-events-none bg-[length:100%_4px,3px_100%]"
    >
    </div>

    <div
        class="flex justify-between items-center border-b border-neon-green/30 pb-2 mb-2"
    >
        <span class="font-arcade text-neon-green text-sm">SYSTEM_LOG</span>
        <span class="w-2 h-2 bg-neon-green rounded-full animate-blink"></span>
    </div>

    <div
        class="font-vt323 text-lg text-neon-green leading-tight space-y-1 h-32 overflow-hidden relative"
    >
        <div class="animate-scroll-up absolute w-full">
            {
                logs.map((log) => (
                    <div class="truncate">
                        <span class="text-slate-500 mr-2">&gt;</span>
                        {log}
                    </div>
                ))
            }
            {
                /* Duplicate for infinite scroll smoothness if needed, or just let CSS handle it */
            }
            {
                logs.map((log) => (
                    <div class="truncate">
                        <span class="text-slate-500 mr-2">&gt;</span>
                        {log}
                    </div>
                ))
            }
        </div>
    </div>
</div>

<style>
    @keyframes scroll-up {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(-50%);
        }
    }
    .animate-scroll-up {
        animation: scroll-up 10s linear infinite;
    }
</style>
