---
import Sidebar from "../components/Sidebar.astro";
import "@fontsource/inter";
import "@fontsource/vt323";
import "@fontsource/press-start-2p";
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;

const base = import.meta.env.BASE_URL === "/" ? "" : import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="IELTS.EXE" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		class="bg-slate-900 text-slate-100 min-h-screen flex overflow-hidden selection:bg-neon-green selection:text-black"
	>
		<!-- Fixed Sidebar -->
		<Sidebar />

		<!-- Scrollable Main Content -->
		<main
			class="flex-grow ml-64 h-screen overflow-y-auto relative bg-fixed bg-center bg-cover"
			style={`background-image: url('${base}/grid.svg');`}
		>
			<div
				class="absolute inset-0 bg-slate-900/90 pointer-events-none fixed"
			>
			</div>
			<div class="relative z-10 min-h-full flex flex-col">
				<slot />
				<footer
					class="mt-auto border-t border-slate-800 py-6 text-center text-slate-500 text-sm font-arcade text-lg bg-slate-900/80 backdrop-blur"
				>
					<p>Copyright &copy; 2026 Shuqi Shen</p>
				</footer>
			</div>
		</main>
	</body>
</html>
