---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="IELTS.EXE | Writing - Task 2">
  <div class="content-section p-8 md:p-12">
    <div class="max-w-7xl mx-auto">
      <header class="mb-12 border-b-4 border-slate-800 pb-8">
        <h1
          class="text-5xl md:text-7xl font-arcade text-white text-glow-indigo uppercase"
        >
          WRITING <span class="text-neon-pink">&gt;</span> TASK 2 <span
            class="text-neon-green animate-blink">_</span
          >
        </h1>
        <p
          class="text-slate-400 font-arcade text-xl mt-2 uppercase tracking-wide"
        >
          Essay. 250 Words. 40 Minutes.
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="border-4 border-slate-700 bg-slate-800/50 p-6">
          <h3 class="font-arcade text-2xl text-neon-cyan mb-4">ESSAY TYPES</h3>
          <ul
            class="font-vt323 text-xl text-slate-300 space-y-2 list-disc pl-5"
          >
            <li>Opinion</li>
            <li>Discuss Both Views</li>
            <li>Advantages vs Disadvantages</li>
            <li>Problem and Solution</li>
            <li>Two-Part Question</li>
          </ul>
        </div>
        <div
          class="border-4 border-slate-700 bg-slate-800/50 p-6 flex items-center justify-center"
        >
          <p class="font-arcade text-xl text-slate-400">
            Select an essay type to view strategies.
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
